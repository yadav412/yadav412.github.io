.navbar{
  position: fixed;
  height: 60px;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 1000;
  transition: 0.3s;


  display: flex;
  justify-content: space-between;
  align-items: center ;
  padding: 1rem , 2rem ;
  background-color: rgba(105, 105, 105, 0.694);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0);


  
}

.favicon{
    height: 40px;
    width: 40px;
}
.name{
  font-family: 'Courier New', Courier, monospace;
  font-style: italic;
  font-size: large;
  color: aliceblue;
  padding-left: 20px;
}


.about{
  background-color: rgba(128, 128, 128, 0.235);
   padding: 10px 2rem 60px;
   text-align: center;
