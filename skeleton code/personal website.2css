    margin-left: 10px;
    

}

.socials{
  padding-left: 20px;
  padding-top: 10px;
  padding-right: 20px;
}

.socials:hover{
    transition:scale(1.1);
}


.links{
  padding-right: 20px;
}

footer{
  align-items: center;
