.about-wrapper {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  gap: 2rem;
  flex-wrap: wrap; /* makes it responsive */
  padding: 2rem;
}

.me {
  width: 200px;
  height: 200px;
  object-fit: cover;
  border-radius: 50px;
